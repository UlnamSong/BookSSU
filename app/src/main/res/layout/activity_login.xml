<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.terry.librarysearch.LoginActivity">


    <com.terry.librarysearch.CustomView.CustomFontEditText
        android:id="@+id/idContent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_logininfo"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/login_edittext_bg"
        android:hint="학번을 입력해주세요."
        android:inputType="textPersonName"
        android:textColor="#d8d8d8"
        android:textColorHint="#d8d8d8"
        android:textSize="14sp"
        app:customFont="@string/naum_square_bold" />

    <com.terry.librarysearch.CustomView.CustomFontTextView
        android:id="@+id/tv_logininfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_ssulogo"
        android:layout_marginTop="23dp"
        android:gravity="center_horizontal"
        android:text="중앙도서관 로그인이 필요한 서비스입니다."
        android:textColor="#313131"
        android:textSize="13.3sp"
        app:customFont="@string/naum_square_bold" />

    <com.terry.librarysearch.CustomView.CustomFontEditText
        android:id="@+id/pwContent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/idContent"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_edittext_bg"
        android:hint="도서관 비밀번호를 입력해주세요."
        android:inputType="textPersonName"
        android:textColor="#d8d8d8"
        android:textColorHint="#d8d8d8"
        android:textSize="14sp"
        app:customFont="@string/naum_square_bold" />

    <com.terry.librarysearch.CustomView.CustomFontButton
        android:id="@+id/loginButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pwContent"
        android:layout_marginBottom="39dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary"
        android:text="로그인"
        android:textColor="@android:color/white"
        app:customFont="@string/naum_square_bold" />

    <ImageView
        android:id="@+id/iv_ssulogo"
        android:layout_width="128dp"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:src="@drawable/ssu_logo"
        app:srcCompat="@drawable/ssu_logo" />

</RelativeLayout>
