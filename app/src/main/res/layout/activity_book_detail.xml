<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.terry.librarysearch.BookDetailActivity">


    <ImageView
        android:id="@+id/book_image"
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        app:srcCompat="@color/colorPrimary" />

    <com.terry.librarysearch.CustomView.CustomFontTextView
        android:id="@+id/tv_booktitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_image"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textColor="#101010"
        android:textSize="18dp"
        app:customFont="@string/naum_square_bold" />

    <LinearLayout
        android:id="@+id/detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_booktitle"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <com.terry.librarysearch.CustomView.CustomFontTextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="저자"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                app:customFont="@string/naum_square_bold" />

            <com.terry.librarysearch.CustomView.CustomFontTextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="발생사항"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                app:customFont="@string/naum_square_bold" />

            <com.terry.librarysearch.CustomView.CustomFontTextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="청구기호"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                app:customFont="@string/naum_square_bold" />

            <com.terry.librarysearch.CustomView.CustomFontTextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="ISBN"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                app:customFont="@string/naum_square_bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.terry.librarysearch.CustomView.CustomFontTextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로딩중입니다."
                android:textColor="#808080"
                android:textSize="12dp"
                app:customFont="@string/naum_square_regular" />

            <com.terry.librarysearch.CustomView.CustomFontTextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="로딩중입니다."
                android:textColor="#808080"
                android:textSize="12dp"
                app:customFont="@string/naum_square_regular" />

            <com.terry.librarysearch.CustomView.CustomFontTextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="로딩중입니다."
                android:textColor="#808080"
                android:textSize="12dp"
                app:customFont="@string/naum_square_regular" />

            <com.terry.librarysearch.CustomView.CustomFontTextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="로딩중입니다."
                android:textColor="#808080"
                android:textSize="12dp"
                app:customFont="@string/naum_square_regular" />
        </LinearLayout>
    </LinearLayout>

    <com.terry.librarysearch.CustomView.CustomFontTextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/detail_layout"
        android:layout_below="@+id/detail_layout"
        android:layout_marginTop="15dp"
        android:text="대출정보"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        app:customFont="@string/naum_square_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_below="@+id/textView13"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/detail_list_layout_bg"
        android:orientation="vertical"
        android:paddingBottom="6dp">

        <com.terry.librarysearch.CustomView.CustomFontTextView
            android:id="@+id/detail_detail_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="로딩중입니다"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:customFont="@string/naum_square_bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/detail_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:visibility="gone" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#00ffffff"
        android:padding="4dp"
        android:src="@drawable/ic_clear_black_48_dp"
        app:srcCompat="@drawable/ic_clear_black_48_dp" />
</RelativeLayout>
